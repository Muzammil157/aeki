{% liquid
  assign section_id = section.id | replace: '-', '_'
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="spacing-style section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} customer-reviews-section"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  <div class="reviews-container">
    {% if section.settings.heading != blank %}
      <div class="reviews-heading">
        <h2>{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <div class="reviews-subtitle">
        <p>{{ section.settings.subtitle }}</p>
      </div>
    {% endif %}

    <div class="reviews-grid">
      {% for block in section.blocks %}
        <div class="review-card" {{ block.shopify_attributes }}>
          <div class="review-header">
            <div class="review-author">
              {% if block.settings.avatar != blank %}
                <img src="{{ block.settings.avatar | image_url: width: 80 }}" alt="{{ block.settings.name }}" class="review-avatar">
              {% else %}
                <div class="review-avatar-placeholder">
                  {{ block.settings.name | slice: 0 }}
                </div>
              {% endif %}
              <div class="review-author-info">
                <div class="review-name">{{ block.settings.name }}</div>
                <div class="review-time">{{ block.settings.time_ago }}</div>
              </div>
            </div>
            <div class="review-menu">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                <circle cx="10" cy="4" r="1.5"></circle>
                <circle cx="10" cy="10" r="1.5"></circle>
                <circle cx="10" cy="16" r="1.5"></circle>
              </svg>
            </div>
          </div>

          <div class="review-content">
            {{ block.settings.review_text }}
          </div>

          <div class="review-reactions">
            <div class="reaction-icons">
              <span class="reaction-emoji">üëç</span>
              <span class="reaction-emoji">‚ù§Ô∏è</span>
              <span class="reaction-emoji">üòÆ</span>
              <span class="reaction-count">{{ block.settings.reactions }}</span>
            </div>
            <div class="review-comments-count">
              {{ block.settings.comments }} {{ block.settings.comments_label }}
            </div>
          </div>

          <div class="review-actions">
            <button class="review-action-btn">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path>
              </svg>
              {{ block.settings.like_label }}
            </button>
            <button class="review-action-btn">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
              </svg>
              {{ block.settings.comment_label }}
            </button>
            <button class="review-action-btn">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="18" cy="5" r="3"></circle>
                <circle cx="6" cy="12" r="3"></circle>
                <circle cx="18" cy="19" r="3"></circle>
                <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
                <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
              </svg>
              {{ block.settings.share_label }}
            </button>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .customer-reviews-section {
    position: relative;
  }

  .reviews-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .reviews-heading {
    text-align: center;
    margin-bottom: 20px;
  }

  .reviews-heading h2 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
  }

  .reviews-subtitle {
    text-align: center;
    margin-bottom: 50px;
  }

  .reviews-subtitle p {
    font-size: 1.125rem;
    line-height: 1.6;
    margin: 0;
    color: rgba(var(--color-foreground), 0.8);
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 30px;
  }

  .review-card {
    background: rgb(var(--color-background));
    border: 1px solid rgba(var(--color-foreground), 0.1);
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    transition: box-shadow 0.3s ease;
  }

  .review-card:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .review-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 15px;
  }

  .review-author {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .review-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
  }

  .review-avatar-placeholder {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(var(--color-foreground), 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
    color: rgb(var(--color-foreground));
  }

  .review-author-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .review-name {
    font-weight: 600;
    font-size: 0.9375rem;
    line-height: 1.2;
  }

  .review-time {
    font-size: 0.8125rem;
    color: rgba(var(--color-foreground), 0.6);
  }

  .review-menu {
    color: rgba(var(--color-foreground), 0.5);
    cursor: pointer;
  }

  .review-menu:hover {
    color: rgba(var(--color-foreground), 0.8);
  }

  .review-content {
    margin-bottom: 15px;
    line-height: 1.5;
    font-size: 0.9375rem;
  }

  .review-reactions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
    border-bottom: 1px solid rgba(var(--color-foreground), 0.1);
    margin-bottom: 8px;
  }

  .reaction-icons {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .reaction-emoji {
    font-size: 1.125rem;
    line-height: 1;
  }

  .reaction-count {
    font-size: 0.875rem;
    color: rgba(var(--color-foreground), 0.7);
    margin-left: 4px;
  }

  .review-comments-count {
    font-size: 0.875rem;
    color: rgba(var(--color-foreground), 0.7);
  }

  .review-actions {
    display: flex;
    gap: 8px;
    justify-content: space-around;
  }

  .review-action-btn {
    flex: 1;
    background: none;
    border: none;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    font-size: 0.875rem;
    font-weight: 500;
    color: rgba(var(--color-foreground), 0.6);
    cursor: pointer;
    border-radius: 6px;
    transition: background-color 0.2s ease;
  }

  .review-action-btn:hover {
    background-color: rgba(var(--color-foreground), 0.05);
    color: rgba(var(--color-foreground), 0.9);
  }

  .review-action-btn svg {
    flex-shrink: 0;
  }

  @media screen and (max-width: 749px) {
    .reviews-heading h2 {
      font-size: 1.75rem;
    }

    .reviews-subtitle p {
      font-size: 1rem;
    }

    .reviews-subtitle {
      margin-bottom: 30px;
    }

    .reviews-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }
</style>

