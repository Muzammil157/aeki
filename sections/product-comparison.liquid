{% liquid
  assign section_id = section.id | replace: '-', '_'
  assign brand_name = section.settings.brand_name
  assign competitor_name = section.settings.competitor_name
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="spacing-style section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} product-comparison-section"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  <div class="comparison-container">
    <div class="comparison-content">
      {% if section.settings.heading != blank %}
        <div class="comparison-heading">
          <h2>{{ section.settings.heading }}</h2>
        </div>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="comparison-description">
          <p>{{ section.settings.description }}</p>
        </div>
      {% endif %}
    </div>

    <div class="comparison-table-wrapper">
      <div class="comparison-table">
        <div class="comparison-table-header">
          <div class="header-brand">{{ brand_name }}</div>
          <div class="header-competitor">{{ competitor_name }}</div>
        </div>

        <div class="comparison-table-body">
          {% for block in section.blocks %}
            <div class="comparison-row" {{ block.shopify_attributes }}>
              <div class="feature-name">{{ block.settings.feature }}</div>
              <div class="brand-check">
                {% if block.settings.brand_has %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                {% else %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                  </svg>
                {% endif %}
              </div>
              <div class="competitor-check">
                {% if block.settings.competitor_has %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                {% else %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                  </svg>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .product-comparison-section {
    position: relative;
  }

  .comparison-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .comparison-content {
    text-align: left;
  }

  .comparison-heading h2 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 20px 0;
  }

  .comparison-description p {
    font-size: 1.125rem;
    line-height: 1.6;
    margin: 0;
    color: rgba(var(--color-foreground), 0.8);
  }

  .comparison-table-wrapper {
    position: relative;
  }

  .comparison-table {
    background: rgb(var(--color-background));
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

  .comparison-table-header {
    display: grid;
    grid-template-columns: 1fr auto auto;
    background: rgb(var(--color-foreground));
    color: rgb(var(--color-background));
    font-weight: 700;
    font-size: 1.5rem;
  }

  .header-brand,
  .header-competitor {
    padding: 20px 30px;
    text-align: center;
    min-width: 150px;
  }

  .comparison-table-body {
    background: rgb(var(--color-background));
  }

  .comparison-row {
    display: grid;
    grid-template-columns: 1fr auto auto;
    align-items: center;
    border-bottom: 1px solid rgba(var(--color-foreground), 0.1);
  }

  .comparison-row:last-child {
    border-bottom: none;
  }

  .feature-name {
    padding: 25px 30px;
    font-size: 1rem;
    font-weight: 500;
    color: rgb(var(--color-background));
    background: rgb(var(--color-foreground));
  }

  .brand-check,
  .competitor-check {
    padding: 25px 30px;
    text-align: center;
    min-width: 150px;
  }

  .brand-check svg {
    color: #22c55e;
    display: inline-block;
  }

  .competitor-check svg {
    color: #ef4444;
    display: inline-block;
  }

  @media screen and (max-width: 989px) {
    .comparison-container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .comparison-content {
      text-align: center;
    }

    .comparison-heading h2 {
      font-size: 2rem;
    }

    .comparison-description p {
      font-size: 1rem;
    }
  }

  @media screen and (max-width: 749px) {
    .comparison-heading h2 {
      font-size: 1.75rem;
    }

    .comparison-table-header {
      font-size: 1.125rem;
    }

    .header-brand,
    .header-competitor {
      padding: 15px 20px;
      min-width: 100px;
    }

    .feature-name {
      padding: 20px;
      font-size: 0.875rem;
    }

    .brand-check,
    .competitor-check {
      padding: 20px;
      min-width: 100px;
    }

    .brand-check svg,
    .competitor-check svg {
      width: 20px;
      height: 20px;
    }
  }
</style>

{% schema %}
{
  "name": "Comparaison de Produit",
  "tag": "section",
  "class": "product-comparison",
  "blocks": [
    {
      "type": "feature",
      "name": "Caractéristique",
      "settings": [
        {
          "type": "text",
          "id": "feature",
          "label": "Nom de la caractéristique",
          "default": "Poils ultra-doux, sans danger pour la peau"
        },
        {
          "type": "checkbox",
          "id": "brand_has",
          "label": "Notre marque possède cette caractéristique",
