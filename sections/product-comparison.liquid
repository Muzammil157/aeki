        },
        {
          "type": "checkbox",
          "id": "competitor_has",
          "label": "Les concurrents possèdent cette caractéristique",
          "default": false
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Nom de la marque",
      "default": "MAYKARDI"
