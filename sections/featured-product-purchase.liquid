{% liquid
  assign product = section.settings.product
  assign selected_variant = product.selected_or_first_available_variant
  assign section_id = section.id | replace: '-', '_'
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="spacing-style section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} featured-product-purchase-section"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  {% if product != blank %}
    <div class="featured-product-container">
      <div class="featured-product-image-column">
        {% if section.settings.show_banner and section.settings.banner_text != blank %}
          <div class="product-banner">
            <div class="banner-content">
              {% if section.settings.banner_icon != blank %}
                <img src="{{ section.settings.banner_icon | image_url: width: 80 }}" alt="Banner icon" class="banner-icon">
              {% endif %}
              <div class="banner-text">{{ section.settings.banner_text }}</div>
            </div>
            {% if section.settings.show_guarantee_badge %}
              <div class="guarantee-badge">
                <svg width="80" height="80" viewBox="0 0 100 100" fill="none">
                  <circle cx="50" cy="50" r="48" fill="#FFD700" stroke="#000" stroke-width="2"/>
                  <path d="M50 15L57 35L78 35L61 48L68 68L50 55L32 68L39 48L22 35L43 35L50 15Z" fill="#000"/>
                </svg>
                <div class="badge-text">{{ section.settings.guarantee_text }}</div>
              </div>
            {% endif %}
          </div>
        {% endif %}

        <div class="product-image-wrapper">
          {% if product.featured_media %}
            <img
              src="{{ product.featured_media | image_url: width: 800 }}"
              alt="{{ product.featured_media.alt | default: product.title }}"
              class="product-main-image"
              loading="lazy"
            >
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'product-placeholder' }}
          {% endif %}
        </div>
      </div>

      <div class="featured-product-details-column">
        <product-form-{{ section_id }} class="product-form-container">
          {% if section.settings.show_rating %}
            <div class="product-rating">
              <div class="rating-stars">
                {% for i in (1..5) %}
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% endfor %}
              </div>
              <div class="rating-text">{{ section.settings.rating_text }}</div>
            </div>
          {% endif %}

          <h1 class="product-title">{{ product.title }}</h1>

          {% if section.settings.show_countdown and section.settings.countdown_text != blank %}
            <div class="countdown-banner">
              {{ section.settings.countdown_text }}
            </div>
          {% endif %}

          <div class="product-quantity-options">
            {% for block in section.blocks %}
              <div class="quantity-option" {{ block.shopify_attributes }}>
                <input
                  type="radio"
                  name="quantity-{{ section_id }}"
                  id="quantity-{{ block.id }}"
                  value="{{ block.settings.quantity }}"
                  data-price="{{ block.settings.price }}"
                  data-compare-price="{{ block.settings.compare_price }}"
                  {% if forloop.first %}checked{% endif %}
                  class="quantity-radio"
                >
                <label for="quantity-{{ block.id }}" class="quantity-label">
                  <div class="quantity-info">
                    <div class="quantity-title">{{ block.settings.quantity_label }}</div>
                    {% if block.settings.show_savings and block.settings.compare_price > block.settings.price %}
                      <div class="quantity-savings">
                        {{ section.settings.save_text }} {{ block.settings.compare_price | minus: block.settings.price | money }}
                      </div>
                    {% endif %}
                    {% if block.settings.show_free_shipping %}
                      <div class="free-shipping-badge">{{ section.settings.free_shipping_text }}</div>
                    {% endif %}
                  </div>
                  <div class="quantity-pricing">
                    <div class="quantity-price">{{ block.settings.price | money }}</div>
                    {% if block.settings.show_savings and block.settings.compare_price > block.settings.price %}
                      <div class="quantity-compare-price">{{ block.settings.compare_price | money }}</div>
                    {% endif %}
                  </div>
                </label>
              </div>
            {% endfor %}
          </div>

          <button
            type="button"
            class="add-to-cart-btn"
            onclick="addToCart_{{ section_id }}()"
          >
            {{ section.settings.add_to_cart_text }}
          </button>

          {% if section.settings.show_details_link %}
            <a href="{{ product.url }}" class="view-details-link">
              {{ section.settings.details_link_text }} →
            </a>
          {% endif %}
        </product-form-{{ section_id }}>
      </div>
    </div>
  {% else %}
    <div class="product-placeholder-message">
      <p>{{ section.settings.no_product_text }}</p>
    </div>
  {% endif %}
</div>

<style>
  .featured-product-purchase-section {
    position: relative;
  }

  .featured-product-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .featured-product-image-column {
    position: relative;
  }

  .product-banner {
    position: relative;
    background: rgb(var(--color-background));
    border: 3px solid rgb(var(--color-foreground));
    border-radius: 50px;
    padding: 18px 30px;
    margin-bottom: 30px;
    display: inline-flex;
    align-items: center;
    gap: 15px;
    max-width: 100%;
  }

  .banner-content {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .banner-icon {
    width: 50px;
    height: auto;
    flex-shrink: 0;
  }

  .banner-text {
    font-weight: 700;
    font-size: 1rem;
    line-height: 1.3;
    text-transform: uppercase;
  }

  .guarantee-badge {
    position: absolute;
    top: -20px;
    right: -25px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .guarantee-badge svg {
    filter: drop-shadow(0 2px 4px rgba(0,0,0,0.2));
  }

  .badge-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 0.5rem;
    font-weight: 900;
    text-transform: uppercase;
    max-width: 55px;
    line-height: 1.1;
    margin-top: 2px;
  }

  .product-image-wrapper {
    width: 100%;
  }

  .product-main-image,
  .product-placeholder {
    width: 100%;
    height: auto;
    display: block;
  }

  .product-rating {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 15px;
  }

  .rating-stars {
    display: flex;
    gap: 2px;
    color: #FFD700;
  }

  .rating-text {
    font-size: 0.9375rem;
    font-weight: 600;
    color: rgba(var(--color-foreground), 0.8);
  }

  .product-title {
    font-size: 2.75rem;
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 25px 0;
    color: #8B4513;
  }

  .countdown-banner {
    background: rgb(var(--color-background));
    border-top: 2px solid rgba(var(--color-foreground), 0.2);
    border-bottom: 2px solid rgba(var(--color-foreground), 0.2);
    padding: 15px 0;
    text-align: center;
    font-weight: 700;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 25px;
    color: #8B4513;
  }

  .product-quantity-options {
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin-bottom: 30px;
  }

  .quantity-option {
    position: relative;
  }

  .quantity-radio {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .quantity-label {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 25px;
    border: 2px solid rgba(var(--color-foreground), 0.25);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    background: rgb(var(--color-background));
  }

  .quantity-radio:checked + .quantity-label {
    border-color: rgb(var(--color-foreground));
    border-width: 3px;
    background: rgba(var(--color-foreground), 0.03);
  }

  .quantity-label:hover {
    border-color: rgba(var(--color-foreground), 0.5);
  }

  .quantity-info {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .quantity-title {
    font-weight: 700;
    font-size: 1.125rem;
    color: rgb(var(--color-foreground));
  }

  .quantity-savings {
    font-size: 0.875rem;
    color: #16a34a;
    font-weight: 700;
    text-transform: uppercase;
  }

  .free-shipping-badge {
    font-size: 0.75rem;
    font-weight: 600;
    font-style: italic;
    color: rgba(var(--color-foreground), 0.7);
    text-transform: uppercase;
  }

  .quantity-pricing {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 5px;
  }

  .quantity-price {
    font-size: 1.75rem;
    font-weight: 700;
    color: rgb(var(--color-foreground));
  }

  .quantity-compare-price {
    font-size: 1.125rem;
    text-decoration: line-through;
    color: rgba(var(--color-foreground), 0.4);
  }

  .add-to-cart-btn {
    width: 100%;
    background: #8B4513;
    color: #fff;
    border: none;
    padding: 22px 40px;
    font-size: 1.25rem;
    font-weight: 700;
    text-transform: uppercase;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    margin-bottom: 15px;
    letter-spacing: 0.5px;
  }

  .add-to-cart-btn:hover {
    background: #6d3410;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
  }

  .add-to-cart-btn:active {
    transform: translateY(0);
  }

  .view-details-link {
    display: block;
    text-align: center;
    font-weight: 600;
    text-decoration: none;
    color: rgb(var(--color-foreground));
    transition: opacity 0.2s ease;
  }

  .view-details-link:hover {
    opacity: 0.7;
  }

  .product-placeholder-message {
    text-align: center;
    padding: 100px 20px;
    font-size: 1.125rem;
    color: rgba(var(--color-foreground), 0.6);
  }

  @media screen and (max-width: 989px) {
    .featured-product-container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .product-title {
      font-size: 2.25rem;
    }
  }

  @media screen and (max-width: 749px) {
    .product-banner {
      padding: 12px 20px;
      margin-bottom: 20px;
    }

    .banner-text {
      font-size: 0.8125rem;
    }

    .banner-icon {
      width: 40px;
    }

    .guarantee-badge {
      top: -15px;
      right: -20px;
    }

    .guarantee-badge svg {
      width: 65px;
      height: 65px;
    }

    .badge-text {
      font-size: 0.45rem;
      max-width: 48px;
    }

    .product-title {
      font-size: 1.875rem;
    }

    .quantity-label {
      padding: 15px 18px;
    }

    .quantity-title {
      font-size: 1rem;
    }

    .quantity-price {
      font-size: 1.5rem;
    }

    .add-to-cart-btn {
      font-size: 1.125rem;
      padding: 18px 30px;
    }
  }
</style>

<script>
  function addToCart_{{ section_id }}() {
    const selectedRadio = document.querySelector('input[name="quantity-{{ section_id }}"]:checked');
    if (!selectedRadio) {
      alert('{{ section.settings.select_option_text }}');
      return;
    }

    const quantity = parseInt(selectedRadio.value);
    const variantId = {{ selected_variant.id }};

    const formData = {
      items: [{
        id: variantId,
        quantity: quantity
      }]
    };

    fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(formData)
    })
    .then(response => response.json())
    .then(data => {
      window.location.href = '/cart';
    })
    .catch((error) => {
      console.error('Error:', error);
      alert('{{ section.settings.error_text }}');
    });
  }
</script>

