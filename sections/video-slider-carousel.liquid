
{% liquid
  assign heading = section.settings.heading
  assign slides_per_view = section.settings.slides_per_view
  assign slides_per_view_mobile = section.settings.slides_per_view_mobile
  assign show_arrows = true
  if section.settings.icons_style == 'none' or section.blocks.size <= 1
    assign show_arrows = false
  endif
  assign section_id = section.id
%}

<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="spacing-style section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} video-slider-carousel-section"
  style="{% render 'spacing-padding', settings: section.settings %}"
  data-section-id="{{ section_id }}"
>
  {% if heading != blank %}
    <div class="video-slider-carousel__heading" style="text-align: {{ section.settings.heading_alignment }};">
      <h2 class="video-slider-carousel__title">{{ heading }}</h2>
    </div>
  {% endif %}

  <div class="video-slider-carousel__container">
    <!-- Swiper -->
    <div class="swiper video-carousel-swiper-{{ section_id }}"
         data-slides-per-view="{{ slides_per_view }}"
         data-slides-per-view-mobile="{{ slides_per_view_mobile }}"
         data-autoplay="{{ section.settings.autoplay }}"
         data-autoplay-speed="{{ section.settings.autoplay_speed }}"
         data-gap="{{ section.settings.gap }}"
         data-center-scale="{{ section.settings.center_slide_scale }}">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="video-slider-carousel__video-wrapper">
              {% if block.settings.source == 'uploaded' %}
                {% if block.settings.video != blank %}
                  {{
                    block.settings.video
                    | video_tag:
                      autoplay: block.settings.video_autoplay,
                      loop: block.settings.video_loop,
                      controls: block.settings.video_controls,
                      muted: true,
                      class: 'video-slider-carousel__video'
                  }}
                {% else %}
                  {{ 'hero-apparel-1' | placeholder_svg_tag: 'video-slider-carousel__placeholder' }}
                {% endif %}
              {% elsif block.settings.video_url != blank %}
                {% render 'video',
                  video_from_url: true,
                  video: block.settings.video_url.id,
                  video_class: 'video-slider-carousel__video',
                  video_type: block.settings.video_url.type,
                  video_alt: block.settings.alt,
                  video_preview_image: block.settings.cover_image,
                  section_id: section.id
                %}
              {% else %}
                {{ 'hero-apparel-1' | placeholder_svg_tag: 'video-slider-carousel__placeholder' }}
              {% endif %}
            </div>
            {% if block.settings.caption != blank %}
              <div class="video-slider-carousel__caption">
                {{ block.settings.caption }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      <!-- Navigation arrows -->
      {% if show_arrows %}
        <div class="swiper-button-prev swiper-button-prev-{{ section_id }}"></div>
        <div class="swiper-button-next swiper-button-next-{{ section_id }}"></div>
      {% endif %}

      <!-- Pagination -->
      {% if section.settings.show_pagination %}
        <div class="swiper-pagination swiper-pagination-{{ section_id }}"></div>
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
  .video-slider-carousel-section {
    position: relative;
  }

  .video-slider-carousel__heading {
    margin-bottom: 40px;
  }

  .video-slider-carousel__title {
    font-size: 2.5rem;
    font-weight: 600;
    margin: 0;
  }

  .video-slider-carousel__container {
    position: relative;
    overflow: visible;
  }

  .video-carousel-swiper-{{ section_id }} {
    overflow: visible;
    padding: 20px 0 50px;
  }

  .video-carousel-swiper-{{ section_id }} .swiper-wrapper {
    align-items: center;
  }

  .video-carousel-swiper-{{ section_id }} .swiper-slide {
    transition: transform 0.3s ease, opacity 0.3s ease;
    opacity: 0.6;
  }

  .video-carousel-swiper-{{ section_id }} .swiper-slide-active {
    opacity: 1;
  }

  .video-slider-carousel__video-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: {{ section.settings.video_aspect_ratio }};
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
    background-color: #f5f5f5;
  }

  .video-slider-carousel__video,
  .video-slider-carousel__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-slider-carousel__caption {
    margin-top: 12px;
    text-align: center;
    font-size: 0.875rem;
  }

  /* Swiper Navigation Buttons */
  .swiper-button-prev-{{ section_id }},
  .swiper-button-next-{{ section_id }} {
    color: rgba(var(--color-foreground), 0.75);
    width: 44px;
    height: 44px;
    background: rgba(var(--color-background), 0.9);
    border-radius: 50%;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .swiper-button-prev-{{ section_id }}:hover,
  .swiper-button-next-{{ section_id }}:hover {
    background: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
  }

  .swiper-button-prev-{{ section_id }}::after,
  .swiper-button-next-{{ section_id }}::after {
    font-size: 20px;
    font-weight: bold;
  }

  /* Swiper Pagination */
  .swiper-pagination-{{ section_id }} {
    bottom: 0 !important;
  }

  .swiper-pagination-{{ section_id }} .swiper-pagination-bullet {
    background: rgb(var(--color-foreground));
    opacity: 0.3;
  }

  .swiper-pagination-{{ section_id }} .swiper-pagination-bullet-active {
    opacity: 1;
  }

  @media screen and (max-width: 749px) {
    .video-slider-carousel__title {
      font-size: 1.75rem;
    }

    .video-slider-carousel__heading {
      margin-bottom: 24px;
    }

    .swiper-button-prev-{{ section_id }},
    .swiper-button-next-{{ section_id }} {
      width: 36px;
      height: 36px;
    }

    .swiper-button-prev-{{ section_id }}::after,
    .swiper-button-next-{{ section_id }}::after {
      font-size: 16px;
    }
  }
{% endstylesheet %}

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

{% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section_id }}';
    const swiperEl = document.querySelector('.video-carousel-swiper-' + sectionId);

    if (!swiperEl) return;

    const slidesPerView = parseInt(swiperEl.dataset.slidesPerView) || 3;
    const slidesPerViewMobile = parseInt(swiperEl.dataset.slidesPerViewMobile) || 1;
    const autoplay = swiperEl.dataset.autoplay === 'true';
    const autoplaySpeed = (parseInt(swiperEl.dataset.autoplaySpeed) || 5) * 1000;
    const gap = parseInt(swiperEl.dataset.gap) || 20;
    const centerScale = parseFloat(swiperEl.dataset.centerScale) || 1.2;

    const swiper = new Swiper('.video-carousel-swiper-' + sectionId, {
      slidesPerView: slidesPerViewMobile,
      spaceBetween: gap,
      centeredSlides: true,
      loop: true,
      grabCursor: true,

      // Autoplay
      autoplay: autoplay ? {
        delay: autoplaySpeed,
        disableOnInteraction: false,
        pauseOnMouseEnter: true,
      } : false,

      // Navigation arrows
      navigation: {
        nextEl: '.swiper-button-next-' + sectionId,
        prevEl: '.swiper-button-prev-' + sectionId,
      },

      // Pagination
      pagination: {
        el: '.swiper-pagination-' + sectionId,
        clickable: true,
      },

      // Responsive breakpoints
      breakpoints: {
        750: {
          slidesPerView: slidesPerView,
          spaceBetween: gap,
        }
      },

      // Center slide effect
      on: {
        init: function() {
          updateSlideScale(this);
        },
        slideChange: function() {
          updateSlideScale(this);
        },
        transitionEnd: function() {
          updateSlideScale(this);
        }
      }
    });

    function updateSlideScale(swiper) {
      const slides = swiper.slides;
      slides.forEach((slide, index) => {
        if (slide.classList.contains('swiper-slide-active')) {
          slide.style.transform = 'scale(' + centerScale + ')';
          slide.style.zIndex = '10';
        } else {
          slide.style.transform = 'scale(1)';
          slide.style.zIndex = '1';
        }
      });
    }
  });
{% endjavascript %}

