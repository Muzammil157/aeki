
{% liquid
  assign heading = section.settings.heading
  assign slides_per_view = section.settings.slides_per_view
  assign slides_per_view_mobile = section.settings.slides_per_view_mobile
  assign show_arrows = true
  if section.settings.icons_style == 'none' or section.blocks.size <= 1
    assign show_arrows = false
  endif
%}

{% if section.blocks.size > 1 %}
  {% capture controls %}
    {%- render 'slideshow-controls',
      style: section.settings.slideshow_controls_style,
      autoplay: section.settings.autoplay,
      item_count: section.blocks.size,
      show_arrows: false,
      arrows_on_media: false,
      controls_on_media: false,
      pagination_position: 'center',
      icon_style: section.settings.icons_style
    -%}
  {% endcapture %}
{% endif %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="spacing-style section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} video-slider-carousel"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  {% if heading != blank %}
    <div class="video-slider-carousel__heading">
      <h2 class="video-slider-carousel__title">{{ heading }}</h2>
    </div>
  {% endif %}

  <div class="video-slider-carousel__container">
    <div
      class="video-slider-carousel__wrapper"
      data-slides-per-view="{{ slides_per_view }}"
      data-slides-per-view-mobile="{{ slides_per_view_mobile }}"
      data-autoplay="{{ section.settings.autoplay }}"
      data-autoplay-speed="{{ section.settings.autoplay_speed }}"
    >
      {% for block in section.blocks %}
        <div class="video-slider-carousel__slide" {{ block.shopify_attributes }}>
          <div class="video-slider-carousel__video-wrapper">
            {% if block.settings.source == 'uploaded' %}
              {% if block.settings.video != blank %}
                {{
                  block.settings.video
                  | video_tag:
                    autoplay: block.settings.video_autoplay,
                    loop: block.settings.video_loop,
                    controls: block.settings.video_controls,
                    muted: true,
                    class: 'video-slider-carousel__video'
                }}
              {% else %}
                {{ 'hero-apparel-1' | placeholder_svg_tag: 'video-slider-carousel__placeholder' }}
              {% endif %}
            {% elsif block.settings.video_url != blank %}
              {% render 'video',
                video_from_url: true,
                video: block.settings.video_url.id,
                video_class: 'video-slider-carousel__video',
                video_type: block.settings.video_url.type,
                video_alt: block.settings.alt,
                video_preview_image: block.settings.cover_image,
                section_id: section.id
              %}
            {% else %}
              {{ 'hero-apparel-1' | placeholder_svg_tag: 'video-slider-carousel__placeholder' }}
            {% endif %}
          </div>
          {% if block.settings.caption != blank %}
            <div class="video-slider-carousel__caption">
              {{ block.settings.caption }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    {% if show_arrows and section.blocks.size > slides_per_view %}
      <div class="video-slider-carousel__navigation">
        {% render 'slideshow-arrows', icon_style: section.settings.icons_style %}
      </div>
    {% endif %}

    {% if section.settings.show_pagination and section.blocks.size > 1 %}
      <div class="video-slider-carousel__controls">
        {{ controls }}
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .video-slider-carousel {
    position: relative;
  }

  .video-slider-carousel__heading {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: 40px;
  }

  .video-slider-carousel__title {
    font-size: 2.5rem;
    font-weight: 600;
    margin: 0;
  }

  .video-slider-carousel__container {
    position: relative;
    overflow: hidden;
  }

  .video-slider-carousel__wrapper {
    display: grid;
    grid-template-columns: repeat(var(--slides-per-view-mobile, 1), 1fr);
    gap: {{ section.settings.gap }}px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .video-slider-carousel__wrapper::-webkit-scrollbar {
    display: none;
  }

  @media screen and (min-width: 750px) {
    .video-slider-carousel__wrapper {
      grid-template-columns: repeat(var(--slides-per-view, 3), 1fr);
    }
  }

  .video-slider-carousel__slide {
    scroll-snap-align: start;
    position: relative;
  }

  .video-slider-carousel__video-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: {{ section.settings.video_aspect_ratio }};
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
    background-color: #f5f5f5;
  }

  .video-slider-carousel__video,
  .video-slider-carousel__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-slider-carousel__caption {
    margin-top: 12px;
    text-align: center;
    font-size: 0.875rem;
  }

  .video-slider-carousel__navigation {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    display: flex;
    justify-content: space-between;
    pointer-events: none;
    padding: 0 20px;
  }

  .video-slider-carousel__navigation > * {
    pointer-events: all;
  }

  .video-slider-carousel__controls {
    margin-top: 30px;
    display: flex;
    justify-content: center;
  }

  @media screen and (max-width: 749px) {
    .video-slider-carousel__title {
      font-size: 1.75rem;
    }

    .video-slider-carousel__heading {
      margin-bottom: 24px;
    }
  }
{% endstylesheet %}

{% javascript %}
  class VideoSliderCarousel extends HTMLElement {
    constructor() {
      super();
      this.wrapper = this.querySelector('.video-slider-carousel__wrapper');
      this.slides = this.querySelectorAll('.video-slider-carousel__slide');
      this.prevBtn = this.querySelector('.slideshow-arrow--previous');
      this.nextBtn = this.querySelector('.slideshow-arrow--next');

      this.currentIndex = 0;
      this.slidesPerView = parseInt(this.wrapper.dataset.slidesPerView) || 3;
      this.slidesPerViewMobile = parseInt(this.wrapper.dataset.slidesPerViewMobile) || 1;
      this.autoplay = this.wrapper.dataset.autoplay === 'true';
      this.autoplaySpeed = (parseInt(this.wrapper.dataset.autoplaySpeed) || 4) * 1000;

      this.init();
    }

    init() {
      if (this.prevBtn) {
        this.prevBtn.addEventListener('click', () => this.prev());
      }

      if (this.nextBtn) {
        this.nextBtn.addEventListener('click', () => this.next());
      }

      if (this.autoplay) {
        this.startAutoplay();
      }

      this.updateCSS();
      window.addEventListener('resize', () => this.updateCSS());
    }

    updateCSS() {
      const isMobile = window.innerWidth < 750;
      const slidesPerView = isMobile ? this.slidesPerViewMobile : this.slidesPerView;
      this.wrapper.style.setProperty('--slides-per-view', this.slidesPerView);
      this.wrapper.style.setProperty('--slides-per-view-mobile', this.slidesPerViewMobile);
    }

    prev() {
      const isMobile = window.innerWidth < 750;
      const slidesPerView = isMobile ? this.slidesPerViewMobile : this.slidesPerView;

      if (this.currentIndex > 0) {
        this.currentIndex--;
        this.scroll();
      }
    }

    next() {
      const isMobile = window.innerWidth < 750;
      const slidesPerView = isMobile ? this.slidesPerViewMobile : this.slidesPerView;
      const maxIndex = this.slides.length - slidesPerView;

      if (this.currentIndex < maxIndex) {
        this.currentIndex++;
        this.scroll();
      }
    }

    scroll() {
      if (this.slides[this.currentIndex]) {
        this.slides[this.currentIndex].scrollIntoView({
          behavior: 'smooth',
          block: 'nearest',
          inline: 'start'
        });
      }
    }

    startAutoplay() {
      this.autoplayInterval = setInterval(() => {
        const isMobile = window.innerWidth < 750;
        const slidesPerView = isMobile ? this.slidesPerViewMobile : this.slidesPerView;
        const maxIndex = this.slides.length - slidesPerView;

        if (this.currentIndex < maxIndex) {
          this.next();
        } else {
          this.currentIndex = 0;
          this.scroll();
        }
      }, this.autoplaySpeed);
    }
  }

  customElements.define('video-slider-carousel', VideoSliderCarousel);
{% endjavascript %}

